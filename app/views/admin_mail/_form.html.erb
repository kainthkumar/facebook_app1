<%= form_for @email, :url => "create" do |f| %>
  <%= f.label :via, 'Via' %>:
  <%= select("admin_email",:message_via,{"Inbox" => "inbox","Email" => "email"})%><br>
  <%= label_tag(:message, "Message:") %><br>
  <%= f.text_area(:message, :class => "NFTextarea", :rows => 20, :cols => 59) %><br>
  <%= f.submit %>
<% end %>